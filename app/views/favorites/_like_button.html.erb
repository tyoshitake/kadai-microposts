<div class="btn-group">
  <% if current_user.like?(micropost) %>
    <%= form_for(current_user.favorites.find_by(follow_id: micropost.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :favor_id, micropost.id %>
      <%= f.submit 'Unlike', class: 'btn btn-danger btn-block' %>
    <% end %>
  <% else %>
    <%= form_for(current_user.favorites.build) do |f| %>
      <%= hidden_field_tag :favor_id, micropost.id %>
      <%= f.submit 'Like', class: 'btn btn-primary btn-block' %>
    <% end %>
  <% end %>
</div>